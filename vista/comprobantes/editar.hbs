<div class="container p-4">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
            <h1>Editando el comprobante: {{titulo}}</h1>
            <form action="http://localhost:44000/comprobantes/actualizar/" method="POST">
				      <input type="hidden" name="id" value="{{id}}">
              <div class="form-group">
                <input class="form-control" type="text" name="titulo" placeholder="Titulo" value="{{ titulo }}">
              </div>
              <div class="form-group">
                <input class="form-control" type="number" name="monto" placeholder="Monto" value="{{ monto }}">
              </div>
              <div class="form-group">
                <textarea class="form-control" name="descripcion" cols="80"
                  placeholder="Descripcion"> {{ description }}</textarea>
              </div>
              <button class="btn btn-primary" type="submit">
                Editar
              </button>
            </form>
        </div>
      </div>
    </div>
  </div>
</div>